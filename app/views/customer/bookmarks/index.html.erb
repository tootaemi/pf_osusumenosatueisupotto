<h2><%= current_customer.name %>さんのいいね一覧</h2>
<% if @bookmarks.present? %>
<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-12">
			<div class="text-left">
				<table class="col-lg table-bordered">
					<thead class="bg-light">
						<tbody>
							<tr>
								<td class="text-left">写真</td>
								<td class="text-left">写真の住所</td>
								<td class="text-left">写真の紹介文</td>
								<td class="text-left">タグ</td>
								<td class="text-left">投稿日</td>
								<td class="text-left">投稿者</td>
							</tr>
							<tr>
								<% @bookmarks.each do |bookmark| %>
								<td>
									
									    <%= link_to post_path(@post) do %>
									    
    <%= link_to posts_url do %>
							<div>
										<p><%= image_tag bookmark.post.image, size: "100x100" if bookmark.post.image.present? %></p>
									</div>
																<% end %>
																																<% end %>


								<td>
									<%= bookmark.post.address %>
								</td>
								<td>
									<%= bookmark.post.introduction %>
								</td>
								<td>
									<%= bookmark.post.hash_tags %>
								</td>
								<td>
									<%= bookmark.post.created_at.strftime("%Y/%m/%d") %>
								</td>
								<td>
									<%= bookmark.post.customer.name %>
								</td>
									<td>
								</td>

										<%#= form_with model: @post, url: posts_url, method: :post do |f| %>
						<%# end %>


						</tr>
								</td>
							</tr>
						</tbody>
					</thead>
				<% end %>
			 </table>
			</div>
		</div>
	</div>
</div>
<% end %>
<div class="mx-auto" style="width: 250px">
	<p class="text-center">
		<%= paginate @bookmarks %>
	</p>
</div>