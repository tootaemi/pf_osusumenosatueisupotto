<h1>投稿一覧</h1>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="text-left">
        <table class="col-lg table-bordered">
          <thead class="bg-light">
            <tr>
              <td class="text-left">写真</td>
              <td class="text-left">写真の住所</td>
              <td class="text-left">写真の紹介文</td>
							<td class="text-left">タグ</td>
							<td class="text-left">投稿日</td>
							<td class="text-left">投稿者</td>
						</tr>
					</thead>
					<tbody>
					  <tr>
					    <% @posts.each do |post| %>
					    <th>
					      <% if post.image.attached? %>
					      <%= image_tag post.image, size: "90x90" %>
					      <%#= image_tag post.image.variant(resize: "300x200").processed, class: "img-fluid" %>
					      <% else %></th>
					      <th><%= image_tag 'no_image', size: "90x90" %>
					      <% end %>
					      </th>
					          <td>
					        <%= post.address %><br/>
					      </td>
					         <td>
					        <%= post.introduction %>
					      </td>
					         <td>
					        <%= post.hash_tags %><br/>
					      </td>
					      <td>
					        <%= post.created_at.strftime('%Y/%m/%d') %>
					      </td>
					      <td>
					        <%= post.customer.name %>
					      </td>

					  </tr>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>
