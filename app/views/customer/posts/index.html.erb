<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
            <tbody>
              <tr>
                <td>
                  <% @posts.each do |post| %>
                  <%= link_to post_path(post) do %>
                  <% if post.image.attached? %>
                  <%= image_tag post.image, size: "450x450" %>
                  <% else %>
                  <%= image_tag 'no_image', size: "450x450" %>
                  <% end %>
                  <% end %>
                </td>
                <td><%= link_to post_path(post), method: :get do %>
                <%= post.address %>
                <% end %>
                </td>
                <td><%= post.introduction %></td>
                </tr>
                <% end %>
            </tbody>
      </table>
    </div>
    　　　　　　</tbody>
  </div>
</div>
