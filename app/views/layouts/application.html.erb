<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="<%= (admin_signed_in? ? "admin_header" : "" ) %>">
      <div class="header-content">
        <ul class="flex">
          <% if admin_signed_in? %>
            <li><%= link_to 'ユーザー一覧',  admin_customers_path %></li>
            <li><%= link_to 'コメント一覧',    admin_comments_path %></li>
            <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>

          <% elsif customer_signed_in? %>
          <p>ようこそ、<%= current_customer.name %>さん!</p>
            <li><%= link_to 'トップページ', root_path %></li>
            <li><%= link_to '新規投稿', new_post_path %></li>
            <li><%= link_to 'マイページ', customers_path %></li>
            <li><%= link_to 'いいね一覧', bookmarks_path %></li>
            <li><%= link_to 'キーワード検索', search_posts_path %></li>
            <li><%= link_to 'タグ検索', tags_path %></li>
            <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %></li>
            </li>
          <% else %>
            <li><%= link_to 'ゲストログイン', customer_guest_sign_in_path, method: :post %></li>
            <li><%= link_to '会員登録', new_customer_registration_path %></li>
            <li><%= link_to 'ログイン', new_customer_session_path %></li>
          <% end %>
        </ul>
      </div>
    </header>

    <main class="container">
      <%= yield %>
    </main>

  </body>
</html>

