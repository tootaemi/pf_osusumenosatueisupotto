<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/52d99e1ee3.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="<%= (admin_signed_in? ? "admin_header" : "" ) %>">
      <div class="header-content">
        <ul class="flex">
          <% if admin_signed_in? %>
           <li class="navbar-nav ml-auto">
             <%= link_to root_path, class: "nav-link text-dark", method: :get do %>
          <i class="fa-solid fa-users"></i>ユーザー一覧
           </li>
           <% end %>
  
            <li class="navbar-nav ml-auto">
             <%= link_to admin_comments_path, class: "nav-link text-dark", method: :get do %>
           <i class="fa-solid fa-pen"></i>コメント一覧
           </li>
           <% end %>
           
            <%= link_to destroy_admin_session_path, class: "nav-link text-dark", method: :delete do %>
           <i class="fas fa-sign-out-alt"></i>ログアウト
           <% end %>

          <% elsif customer_signed_in? %>
          <p>ようこそ、<%= current_customer.name %>さん!</p>
          <nav class="navbar navbar-dark bg-dark">
  <a href="root_path" class="fas fa-home">トップページ</a>
</nav>
           <li class="navbar-nav ml-auto">
             <%= link_to root_path, class: "nav-link text-dark", method: :get do %>
             <i class="fas fa-home"></i>トップページ
           </li>
           <% end %>
           <%= link_to new_post_path, class: "nav-link text-dark", method: :get do %>
           <i class="fa-solid fa-camera"></i>新規投稿
           <% end %>
           <%= link_to customers_path, class: "nav-link text-dark", method: :get do %>
           <i class="fa-solid fa-face-smile"></i>マイページ
           <% end %>
           <%= link_to bookmarks_path, class: "nav-link text-dark", method: :get do %>
           <i class="fa-solid fa-heart"></i>いいね一覧
           <% end %>
           <%= link_to search_posts_path, class: "nav-link text-dark", method: :get do %>
           <i class="fa-solid fa-magnifying-glass"></i>キーワード検索
           <% end %>
           <%= link_to tags_path, class: "nav-link text-dark", method: :get do %>
           <i class="fa-solid fa-hashtag"></i>タグ検索
           <% end %>
           <%= link_to destroy_customer_session_path, class: "nav-link text-dark", method: :delete do %>
           <i class="fas fa-sign-out-alt"></i>ログアウト
           <% end %>
           </li>
          <% else %>
            <li><%= link_to 'ゲストログイン', customer_guest_sign_in_path, method: :post %></li>
                 <%= link_to new_customer_registration_path, class: "nav-link text-dark", method: :get do %>
              <i class="fa-solid fa-user"></i>ゲストログイン
              <% end %>
            
              <li><%= link_to '会員登録', new_customer_registration_path %></li>
               <%= link_to new_customer_registration_path, class: "nav-link text-dark", method: :get do %>
              <i class="fas fa-user-plus"></i>会員登録
              <% end %>
            <li><%= link_to 'ログイン', new_customer_session_path %></li>
                <%= link_to new_customer_session_path, class: "nav-link text-dark", method: :get do %>
              <i class="fas fa-sign-in-alt"></i>ログイン
              <% end %>
          <% end %>
        </ul>
      </div>
    </header>

    <main class="container">
      <%= yield %>
    </main>

  </body>
</html>

