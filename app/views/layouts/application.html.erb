<!DOCTYPE html>
    <title>おすすめの撮影スポットサイト</title>
    <html>
      <head>
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <script src="https://kit.fontawesome.com/52d99e1ee3.js" crossorigin="anonymous"></script>
        <%= stylesheet_pack_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
        <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
        <script src="https://kit.fontawesome.com/52d99e1ee3.js" crossorigin="anonymous"></script>
      </head>
      <body>
        <header class="<%= (admin_signed_in? ? "admin_header" : "") %>">
          <div class="header-content">
            <ul class="flex">
              <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
              <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
              <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
              </head>
              <% if admin_signed_in? %>
              <nav class="navbar navbar-dark bg-dark">
                <li class="navbar-nav ml-auto">
                  <%= link_to admin_customers_path, class: "nav-link text-light", method: :get do %>
                  <i class="fa-solid fa-users"></i>ユーザー一覧
                </li>
              <% end %>
              <li class="navbar-nav ml-auto">
                <%= link_to admin_comments_path, class: "nav-link text-light", method: :get do %>
                <i class="fa-solid fa-pen"></i>コメント一覧
              </li>
            <% end %>
            <li class="navbar-nav ml-auto">
              <%= link_to destroy_admin_session_path, class: "nav-link text-light", method: :delete do %>
              <i class="fas fa-sign-out-alt"></i>ログアウト
            </li>
          <% end %>
              </nav>
              <% elsif customer_signed_in? %>
              <div class="text-center">
                <p>ようこそ、<%= current_customer.name %>さん！</p>
              </div>
              <nav class="navbar navbar-dark bg-dark">
                <%= link_to root_path, class: "nav-link text-light", method: :get do %>
                <i class="fas fa-home"></i>トップページ
                <% end %>
                <%= link_to new_post_path, class: "nav-link text-light", method: :get do %>
                <i class="fa-solid fa-camera"></i>新規投稿
                <% end %>
                <%= link_to customers_path, class: "nav-link text-light", method: :get do %>
                <i class="fa-solid fa-face-smile"></i>マイページ
                <% end %>
                <%= link_to bookmarks_path, class: "nav-link text-light", method: :get do %>
                <i class="fa-solid fa-heart"></i>いいね一覧
                <% end %>
                <%= link_to tags_path, class: "nav-link text-light", method: :get do %>
                <i class="fa-solid fa-hashtag"></i>タグ検索
                <% end %>
                <%= link_to destroy_customer_session_path, class: "nav-link text-light", method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>ログアウト
                <% end %>
                </li>
                <% else %>
                </nav>
                <nav class="navbar navbar-dark bg-dark">
                  <%= link_to root_path, class: "nav-link text-light", method: :get do %>
                  <i class="fas fa-home"></i>トップページ
                  <% end %>
                  <li class="navbar-nav ml-auto">
                    <%= link_to customers_guest_sign_in_path, class: "nav-link text-light", method: :get do %>
                    <i class="fa-solid fa-user"></i>ゲストログイン
                    <% end %>
                  </li>
                  <li class="navbar-nav ml-auto">
                    <%= link_to new_customer_registration_path, class: "nav-link text-light", method: :get do %>
                    <i class="fas fa-user-plus"></i>新規会員登録
                    <% end %>
                  </li>
                  <li class="navbar-nav ml-auto">
                    <%= link_to new_customer_session_path, class: "nav-link text-light", method: :get do %>
                    <i class="fas fa-sign-in-alt"></i>ログイン
                    <% end %>
                  <% end %>
                  </li>
                </nav>
            </ul>
          </div>
        </header>
      <main class="container">
    <%= yield %>
      </main>
     </body>
    </html>
