<h2>
  <div class="container">
    <div class="row">
      <div calss="col-xs-12">
        <span class="p-3 mb-2 bg-light text-dark">
          <%= @customer.name %>さんの会員詳細情報編集
        </span>
      </div>
    </div>
  </div>
</h2><br>
<%= form_with(model: @customer, url: admin_customer_path, local: true, method: :patch) do |f| %>
<div class="col-xs-12">
  <div class="form-group col-xs-8">
    <%= f.label :"会員ID", class: "col-sm-5 control-label" %>
    <%= f.label :"#{@customer.id}" %>
  </div>
</div>
<div class="form-group col-xs-9">
  <%= f.label :"ユーザーネーム", class: "col-sm-4 control-label" %>
  <%= f.text_field :name, autofocus: true, id: "inputName", class: "col-sm-2" %>
</div>
<div class="form-group col-xs-9">
  <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
  <%= f.text_field :email, class: "col-sm-3" %>
</div>
<div class="actions  col-xs-9 col-xs-offset-2">
  <%= f.submit "変更を保存する", class: "btn btn-success" %>
  <%= link_to "削除する", admin_customer_path(@customer.id), method: :delete, class: "btn btn-danger" %>
</div>
<% end %>